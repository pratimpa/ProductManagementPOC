@page "/category-form"
@inject ICategoryService CategoryService
@using Client.Services


<EditForm Model="category" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <div class="form-group"><label>Name</label><InputText class="form-control" @bind-Value="category.Name" /></div>
    <button type="submit" class="btn btn-primary">Save</button>
</EditForm>

@code {
    private Category category = new();
    private async Task HandleValidSubmit() => await CategoryService.AddCategoryAsync(category);
}


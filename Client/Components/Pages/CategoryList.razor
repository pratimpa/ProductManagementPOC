@page "/category-list"
@using Client.Services
@inject ICategoryService CategoryService
<h3>Category List</h3>
@if (categories == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <ul class="list-group">
        @foreach (var category in categories)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                @category.Name
                <div><button class="btn btn-sm btn-primary">Edit</button><button class="btn btn-sm btn-danger">Delete</button></div>
            </li>
        }
    </ul>
}
@code {
    private List<Category>? categories;
    protected override async Task OnInitializedAsync() => categories = await CategoryService.GetCategoriesAsync();
}
